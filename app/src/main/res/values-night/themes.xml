<resources>
    <style name="Theme.SeamansbookTestApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:background">@drawable/round_back_white_stroke2_10</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="icon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:tint">#FFFDFD</item>
    </style>

    <style name="homeInfoTestBlock">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="homeAdditionalButtons">
        <item name="android:background">@drawable/border_secondary</item>
    </style>

    <style name="statisticsPercentsBlock">
        <item name="android:background">@drawable/border_1px</item>
    </style>
    <style name="statisticsPercentsSubBlock">
        <item name="android:background">@drawable/border_1px</item>
    </style>

    <style name="defaultCardBackground">
        <item name="android:background">@drawable/rounded_grey_background</item>
    </style>

    <style name="download_questions_background">
        <item name="android:background">@drawable/download_activity_background_image</item>
    </style>

    <style name="download_questions_ackButton">
        <item name="android:background">@drawable/border_ocean_gradient</item>
        <item name="android:backgroundTint">@color/backgroundSecondaryColor</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="searchFirstBlock">
        <item name="android:background">@drawable/border_1px</item>
    </style>

</resources>